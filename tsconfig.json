{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "dom",
      "es2017"
    ],
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@db/*": [
        "./db/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
  // "exclude": [
  //     "dist",
  //     ".next",
  //     "out",
  //     "node_modules",
  //     "next.config.js",
  //     "postcss.config.js",
  //     "**/*.spec.ts",
  //     "**/*.spec.tsx",
  //     "**/*.test.ts",
  //     "**/*.test.tsx",
  //     "coverage"
  // ],
  // "include": [
  //     "next-env.d.ts",
  //     "**/*.ts",
  //     "**/*.tsx",
  //     "pages/_app.tsx",
  //     "pages/_app.tsx"
  // ]
  ,
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/r/[personslug]"
  ],
  "exclude": [
    "node_modules"
  ]
}